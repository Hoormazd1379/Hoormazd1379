<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio</title>
    <link rel="stylesheet" href="/css/cvstyles.css">
    <script src="https://kit.fontawesome.com/e3b50b909d.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="justifiedGallery.min/justifiedGallery.min.css" />
    <script src="justifiedGallery.min/jquery.justifiedGallery.min.js"></script>
    <script src="/js/cvscripts.js"></script>


    <script>
        function showTab(tabName) {
            var tabs = document.getElementsByClassName("tab-content");
            for (var i = 0; i < tabs.length; i++) {
                tabs[i].style.display = "none";
            }
            document.getElementById(tabName).style.display = "block";

            // Fade-in animation
            document.getElementById(tabName).classList.add('fade-in');

            // if(tabName == 'photography') {
            //     $('#mygallery').justifiedGallery({
            //         rowHeight : 70,
            //         lastRow : 'nojustify',
            //         margins : 3
            //     });
            // }
        }

        window.onload = function() {
            // Show the first tab by default
            showTab('experience');
        };
    </script>
</head>
<body>

    <header>
        <div class="banner">
            <img src="/img/pfb.png" alt="Banner" class="banner-image">
        </div>
        <div class="profile-header">
            <img src="/img/pfp.jpeg" alt="Profile Photo" class="profile-photo">
            <div class="profile-info">
                <h1>My Experiences</h1>
                <p>Explore my professional journey, experiences, projects, and photography.</p>
            </div>
        </div>
    </header>

    <div class="tabs-container">
        <div class="tabs">
            <button onclick="showTab('experience')">Experience</button>
            <button onclick="showTab('education')">Education</button>
            <button onclick="showTab('volunteering')">Volunteering</button>
            <button onclick="showTab('projects')">Projects</button>
            <button onclick="showTab('photography')">Photography</button>
        </div>
    </div>

    <div class="content">
        <p class="tab-content">Loading ...</p>
        <div id="education" class="tab-content fade-in">
            <div class="box">
                <img src="/img/sig.png" alt="Education Logo" class="box-image">
                <div class="box-text">
                    <h3>Master's Degree in Computer Science</h3>
                    <div class="role-date">
                        <span class="role-box">Student</span>
                        <span class="date-box">Sep 2021 - Jul 2023 · 2 years</span>
                    </div>
                    <p><strong>University:</strong> Università della Svizzera italiana</p>
                    <p><strong>Relevant Coursework:</strong> Artificial Intelligence, Machine Learning</p>
                    <div class="skills">
                        <span class="skill-box">Python</span>
                        <span class="skill-box">TensorFlow</span>
                        <span class="skill-box">Machine Learning</span>
                    </div>
                </div>
            </div>
        </div>

        <div id="experience" class="tab-content fade-in" style="display: none;">
            <div class="box">
                <img src="/img/sig.png" alt="Company Logo" class="box-image">
                <div class="box-text">
                    <h3>Software Engineer</h3>
                    <div class="role-date">
                        <span class="role-box">Full-stack Developer</span>
                        <span class="date-box">Jan 2022 - Present · 1 yr 9 mos</span>
                    </div>
                    <p><strong>Company:</strong> Tech Solutions Inc.</p>
                    <div class="skills">
                        <span class="skill-box">Node.js</span>
                        <span class="skill-box">React</span>
                        <span class="skill-box">JavaScript</span>
                    </div>
                </div>
            </div>
        </div>

        <div id="volunteering" class="tab-content fade-in" style="display: none;">
            <div class="box">
                <img src="/img/sig.png" alt="Volunteering Logo" class="box-image">
                <div class="box-text">
                    <h3>The Rook Club</h3>
                    <div class="role-date">
                        <span class="role-box">Co-Founder & President</span>
                        <span class="date-box">Dec 2023 - Present</span>
                    </div>
                    <div class="skills">
                        <span class="skill-box">Project Management</span>
                        <span class="skill-box">Team Management</span>
                        <span class="skill-box">Leadership</span>
                    </div>
                </div>
            </div>
        </div>

        <div id="projects" class="tab-content fade-in" style="display: none;">
            <div class="box">
                <img src="/img/sig.png" alt="Project Logo" class="box-image">
                <div class="box-text">
                    <h3>Rock-Paper-Scissors AI</h3>
                    <div class="role-date">
                        <span class="role-box">Project Developer</span>
                        <span class="date-box">Jan 2023 - Jul 2023 · 6 mos</span>
                    </div>
                    <div class="skills">
                        <span class="skill-box">Python</span>
                        <span class="skill-box">Machine Learning</span>
                        <span class="skill-box">Algorithm Design</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Photography Tab -->
        <div id="photography" class="tab-content fade-in" style="display: none;">
            <div class="photo-gallery" id="mygallery">
                <!-- Add more photos here -->
            </div>
        </div>
    </div>
    </body>
</html>
